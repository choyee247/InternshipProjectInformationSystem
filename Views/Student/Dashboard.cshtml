@{
    ViewData["Title"] = "Student Dashboard";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<style>
    body {
        background: linear-gradient(135deg, #e0f7fa, #f8f9fa);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        min-height: 100vh;
    }

    .dashboard-header {
        background: linear-gradient(120deg, #4361ee, #3f37c9);
        color: white;
        padding: 40px 30px;
        border-radius: 15px 15px 0 0;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

        .dashboard-header h1 {
            font-weight: 700;
            font-size: 2.5rem;
            margin-bottom: 10px;
        }

    .dashboard-container {
        background: white;
        border-radius: 0 0 15px 15px;
        padding: 40px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.05);
    }

    .card {
        border: none;
        border-radius: 12px;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.05);
        transition: transform 0.2s ease-in-out;
    }

        .card:hover {
            transform: translateY(-5px);
        }

    .btn-primary {
        background: linear-gradient(120deg, #4361ee, #3f37c9);
        border: none;
        font-weight: 600;
        border-radius: 8px;
    }

        .btn-primary:hover {
            transform: translateY(-1px);
            box-shadow: 0 6px 15px rgba(67, 97, 238, 0.4);
        }
</style>

<div class="container mt-5">
    <div class="dashboard-header">
        <h1><i class="fas fa-tachometer-alt me-2"></i>Student Dashboard</h1>
        <p class="mb-0">Manage student records and academic information efficiently.</p>
    </div>

    <div class="dashboard-container">
        <div class="alert alert-success d-flex align-items-center" role="alert">
            <i class="fas fa-check-circle me-2"></i>
            Student created successfully! You can now manage student records.
        </div>

        <div class="row mt-4">
            <div class="col-md-6">
                <div class="card p-4">
                    <div class="card-body">
                        <h5 class="card-title text-primary">
                            <i class="fas fa-users me-2"></i>Student Management
                        </h5>
                        <p class="card-text mb-3">You can perform the following actions:</p>
                        <ul class="list-unstyled ps-3">
                            <li><i class="fas fa-eye text-secondary me-2"></i>View student records</li>
                            <li><i class="fas fa-edit text-secondary me-2"></i>Edit student information</li>
                            <li><i class="fas fa-chart-line text-secondary me-2"></i>Track academic progress</li>
                        </ul>
                        <a href="@Url.Action("Create", "Student")" class="btn btn-primary mt-3">
                            <i class="fas fa-plus me-2"></i>Add Another Student
                        </a>
                    </div>
                </div>
            </div>

            <!-- Optional: Additional feature card -->
            <div class="col-md-6">
                <div class="card p-4">
                    <div class="card-body">
                        <h5 class="card-title text-success">
                            <i class="fas fa-cogs me-2"></i>Admin Tools
                        </h5>
                        <p class="card-text">Future features can include export, search, and batch management tools.</p>
                        <button class="btn btn-outline-success" disabled>
                            <i class="fas fa-lock me-2"></i>Coming Soon
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

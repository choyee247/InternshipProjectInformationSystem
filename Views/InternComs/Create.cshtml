@model InternComViewModel

@{
    ViewData["Title"] = "Create Intern Company";
}

<div class="create-page-container" style="background: linear-gradient(135deg, #EAECC6 0%, #2BC0E4 100%); min-height: 100vh; padding: 30px 0;">
    <div class="container">
        <div class="create-header text-center mb-5">
            <h2 class="display-5 font-weight-bold" style="color: #2a52be; text-shadow: 1px 1px 3px rgba(0,0,0,0.1);">
                <i class="fas fa-plus-circle me-2"></i>@ViewData["Title"]
            </h2>
            <p class="lead" style="color: #333;">Register a new company for internship opportunities</p>
        </div>

        <div class="card shadow-lg rounded-lg overflow-hidden" style="border: none;">
            <div class="card-header py-3" style="background: linear-gradient(to right, #2BC0E4, #4ca2cd);">
                <h5 class="m-0 font-weight-bold text-white">
                    <i class="fas fa-info-circle me-2"></i>Company Details
                </h5>
            </div>

            <div class="card-body p-4">
                <form asp-action="Create" enctype="multipart/form-data" class="needs-validation" novalidate>
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <partial name="_InternComForm" model="Model" />

                    <div class="form-actions mt-4 text-end">
                        <a asp-action="Index" class="btn btn-lg btn-outline-secondary me-2" style="border-radius: 8px; min-width: 120px;">
                            <i class="fas fa-arrow-left me-2"></i>Back
                        </a>
                        <button type="submit" class="btn btn-lg shadow" style="background: linear-gradient(to right, #2BC0E4, #4ca2cd); color: white; border: none; border-radius: 8px; min-width: 120px;">
                            <i class="fas fa-save me-2"></i>Create
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .create-page-container {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .card {
            border-radius: 15px;
            overflow: hidden;
        }

        .form-control:focus, .form-select:focus {
            border-color: #2BC0E4;
            box-shadow: 0 0 0 0.25rem rgba(43, 192, 228, 0.25);
        }

        .alert-danger {
            background-color: rgba(231, 76, 60, 0.1);
            border-color: rgba(231, 76, 60, 0.3);
            color: #e74c3c;
        }

        .create-header h2 {
            position: relative;
            display: inline-block;
        }

            .create-header h2:after {
                content: '';
                position: absolute;
                bottom: -10px;
                left: 50%;
                transform: translateX(-50%);
                width: 80px;
                height: 3px;
                background: linear-gradient(to right, #2BC0E4, #4ca2cd);
                border-radius: 3px;
            }

        .btn-outline-secondary {
            border: 2px solid #6c757d;
            color: #6c757d;
            transition: all 0.3s ease;
        }

            .btn-outline-secondary:hover {
                background-color: #6c757d;
                color: white;
            }
    </style>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // Enhanced file upload display
        document.querySelector('input[type="file"]')?.addEventListener('change', function(e) {
            const fileName = e.target.files[0]?.name || 'No file selected';
            const uploadContainer = e.target.closest('.file-upload-container');
            if (uploadContainer) {
                uploadContainer.querySelector('p:first-child').textContent = fileName;
                uploadContainer.querySelector('p.small').textContent = 'Click to change';
            }
        });
    </script>
}
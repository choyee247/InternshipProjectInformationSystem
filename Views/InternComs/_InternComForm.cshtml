@model InternComViewModel

<div class="form-container" style="background: linear-gradient(135deg, #EAECC6 0%, #2BC0E4 100%); padding: 30px; border-radius: 15px; box-shadow: 0 10px 30px rgba(0,0,0,0.1);">
    <div class="form-header text-center mb-4">
        <h3 class="form-title" style="color: #2a52be; font-weight: 700; text-shadow: 1px 1px 3px rgba(0,0,0,0.1);">
            <i class="fas fa-building me-2"></i>Company Information
        </h3>
        <p class="text-muted">Fill in the details to register your company</p>
    </div>

    <div class="row g-4">
        <!-- Left Column -->
        <div class="col-md-6">
            <div class="form-card p-4 h-100" style="background-color: rgba(255,255,255,0.9); border-radius: 10px; border-left: 5px solid #2BC0E4;">
                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-bold" style="color: #2a52be;"></label>
                    <input asp-for="Name" class="form-control form-control-lg" style="border-radius: 8px; border: 2px solid #EAECC6;" />
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Industry" class="form-label fw-bold" style="color: #2a52be;"></label>
                    <input asp-for="Industry" class="form-control form-control-lg" style="border-radius: 8px; border: 2px solid #EAECC6;" />
                    <span asp-validation-for="Industry" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label fw-bold" style="color: #2a52be;"></label>
                    <textarea asp-for="Description" class="form-control form-control-lg" rows="3" style="border-radius: 8px; border: 2px solid #EAECC6;"></textarea>
                </div>

                <div class="mb-3">
                    <label asp-for="Website" class="form-label fw-bold" style="color: #2a52be;"></label>
                    <div class="input-group">
                        <span class="input-group-text" style="background-color: #EAECC6; border: 2px solid #EAECC6;"><i class="fas fa-globe"></i></span>
                        <input asp-for="Website" class="form-control form-control-lg" style="border-radius: 8px; border: 2px solid #EAECC6;" />
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="ImageFile" class="form-label fw-bold" style="color: #2a52be;">Company Logo</label>
                    <div class="file-upload-container" style="border: 2px dashed #2BC0E4; border-radius: 8px; padding: 20px; background-color: rgba(43, 192, 228, 0.1);">
                        <input asp-for="ImageFile" type="file" class="form-control form-control-lg" style="opacity: 0; position: absolute; z-index: -1;">
                        <div class="text-center">
                            <i class="fas fa-cloud-upload-alt fa-2x mb-2" style="color: #2BC0E4;"></i>
                            <p class="mb-1">Drag & drop your logo here</p>
                            <p class="small text-muted">or click to browse</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Column -->
        <div class="col-md-6">
            <div class="form-card p-4 h-100" style="background-color: rgba(255,255,255,0.9); border-radius: 10px; border-left: 5px solid #2BC0E4;">
                <div class="mb-3">
                    <label asp-for="Address" class="form-label fw-bold" style="color: #2a52be;"></label>
                    <input asp-for="Address" class="form-control form-control-lg" style="border-radius: 8px; border: 2px solid #EAECC6;" />
                    <span asp-validation-for="Address" class="text-danger small"></span>
                </div>

                <div class="row g-2">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="City" class="form-label fw-bold" style="color: #2a52be;"></label>
                            <input asp-for="City" class="form-control form-control-lg" style="border-radius: 8px; border: 2px solid #EAECC6;" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Country" class="form-label fw-bold" style="color: #2a52be;"></label>
                            <input asp-for="Country" class="form-control form-control-lg" style="border-radius: 8px; border: 2px solid #EAECC6;" />
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-bold" style="color: #2a52be;"></label>
                    <div class="input-group">
                        <span class="input-group-text" style="background-color: #EAECC6; border: 2px solid #EAECC6;"><i class="fas fa-envelope"></i></span>
                        <input asp-for="Email" class="form-control form-control-lg" style="border-radius: 8px; border: 2px solid #EAECC6;" />
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="PhoneNumber" class="form-label fw-bold" style="color: #2a52be;"></label>
                    <div class="input-group">
                        <span class="input-group-text" style="background-color: #EAECC6; border: 2px solid #EAECC6;"><i class="fas fa-phone"></i></span>
                        <input asp-for="PhoneNumber" class="form-control form-control-lg" style="border-radius: 8px; border: 2px solid #EAECC6;" />
                    </div>
                    <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                </div>

                <div class="mb-3 form-check form-switch">
                    <input asp-for="OffersInternships" class="form-check-input" style="width: 3em; height: 1.5em; background-color: #EAECC6; border-color: #2BC0E4;" />
                    <label asp-for="OffersInternships" class="form-check-label fw-bold" style="color: #2a52be;"></label>
                </div>

                <div class="d-grid gap-2 mt-4">
                    <button type="submit" class="btn btn-lg shadow" style="background: linear-gradient(to right, #2BC0E4, #4ca2cd); color: white; border: none; border-radius: 8px; padding: 12px;">
                        <i class="fas fa-save me-2"></i>Save Company
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .form-control:focus, .form-select:focus {
            border-color: #2BC0E4;
            box-shadow: 0 0 0 0.25rem rgba(43, 192, 228, 0.25);
        }

        .file-upload-container {
            transition: all 0.3s ease;
            cursor: pointer;
        }

            .file-upload-container:hover {
                background-color: rgba(43, 192, 228, 0.2) !important;
            }

        .form-check-input:checked {
            background-color: #2BC0E4;
            border-color: #2BC0E4;
        }

        .form-title {
            position: relative;
            display: inline-block;
        }

            .form-title:after {
                content: '';
                position: absolute;
                bottom: -10px;
                left: 50%;
                transform: translateX(-50%);
                width: 50px;
                height: 3px;
                background: linear-gradient(to right, #2BC0E4, #4ca2cd);
                border-radius: 3px;
            }
    </style>
}
@model ProjectType

<div class="edit-container">
    <!-- Header with animated title -->
    <div class="edit-header">
        <div class="header-decoration">
            <div class="deco-line"></div>
            <div class="deco-dots">
                <span></span><span></span><span></span>
            </div>
        </div>
        <h2 class="edit-title">
            <span class="edit-icon">✏️</span>
            Edit Project Type
        </h2>
        <p class="edit-subtitle">Update academic classification details</p>
    </div>

    <!-- Main form with elegant styling -->
    <form asp-action="Edit" class="edit-form">
        <input type="hidden" asp-for="ProjectType_pkId" />

        <div class="form-group">
            <div class="input-container">
                <label asp-for="TypeName" class="input-label"></label>
                <input asp-for="TypeName" class="form-input"
                       placeholder="e.g. Undergraduate Research, Capstone Project" />
                <div class="input-underline"></div>
                <span asp-validation-for="TypeName" class="validation-message"></span>
            </div>
        </div>

        <div class="form-actions">
            <button type="submit" class="save-button">
                <span class="button-icon">💾</span>
                <span class="button-text">Save Changes</span>
            </button>
            <a asp-action="Index" class="cancel-button">
                <span class="button-icon">↩</span>
                <span class="button-text">Cancel</span>
            </a>
        </div>
    </form>

    <!-- Decorative footer -->
    <div class="edit-footer">
        <svg viewBox="0 0 1200 40" class="footer-wave">
            <path d="M0,40 C300,20 500,40 800,20 C1000,5 1100,25 1200,20 L1200,40 L0,40 Z"
                  fill="rgba(0,33,71,0.03)"></path>
        </svg>
    </div>
</div>

<style>
    /* Academic color palette */
    :root {
        --oxford-blue: #002147;
        --gold-leaf: #D4AF37;
        --ivory: #FFFFF0;
        --slate: #708090;
        --burgundy: #800020;
        --sage: #9DC183;
        --parchment: #F5E6CA;
    }

    body {
        font-family: 'Crimson Text', Georgia, serif;
        background-color: var(--parchment);
        color: var(--oxford-blue);
        margin: 0;
        padding: 0;
        line-height: 1.6;
    }

    .edit-container {
        max-width: 680px;
        margin: 2rem auto;
        background: white;
        border-radius: 12px;
        box-shadow: 0 8px 24px rgba(0, 33, 71, 0.08);
        overflow: hidden;
    }

    .edit-header {
        padding: 2rem;
        background: linear-gradient(135deg, var(--oxford-blue), #003366);
        color: white;
        position: relative;
    }

    .header-decoration {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        pointer-events: none;
    }

    .deco-line {
        position: absolute;
        bottom: 1.5rem;
        left: 2rem;
        width: 4rem;
        height: 2px;
        background: var(--gold-leaf);
    }

    .deco-dots {
        position: absolute;
        top: 2rem;
        right: 2rem;
        display: flex;
        gap: 6px;
    }

        .deco-dots span {
            display: block;
            width: 8px;
            height: 8px;
            border-radius: 50%;
            background: rgba(255,255,255,0.3);
        }

    .edit-title {
        margin: 0;
        font-size: 2rem;
        font-weight: 700;
        display: flex;
        align-items: center;
    }

    .edit-icon {
        margin-right: 1rem;
        font-size: 1.8rem;
        animation: float 3s ease-in-out infinite;
    }

    .edit-subtitle {
        margin: 0.5rem 0 0;
        font-style: italic;
        opacity: 0.9;
    }

    .edit-form {
        padding: 2rem;
    }

    .input-container {
        margin-bottom: 2rem;
        position: relative;
    }

    .input-label {
        display: block;
        margin-bottom: 0.5rem;
        font-weight: 600;
        color: var(--oxford-blue);
        font-size: 0.95rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .form-input {
        width: 100%;
        padding: 1rem;
        font-size: 1.1rem;
        border: none;
        border-bottom: 2px solid rgba(112, 128, 144, 0.3);
        background: rgba(255,255,255,0.8);
        transition: all 0.3s ease;
    }

        .form-input:focus {
            outline: none;
            border-bottom-color: var(--gold-leaf);
            background: rgba(255, 215, 0, 0.05);
        }

    .input-underline {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 0;
        height: 2px;
        background: var(--gold-leaf);
        transition: width 0.3s ease;
    }

    .form-input:focus ~ .input-underline {
        width: 100%;
    }

    .validation-message {
        display: block;
        margin-top: 0.5rem;
        color: var(--burgundy);
        font-size: 0.9rem;
    }

    .form-actions {
        display: flex;
        gap: 1rem;
        margin-top: 2rem;
    }

    .save-button {
        display: inline-flex;
        align-items: center;
        padding: 0.8rem 1.5rem;
        background: var(--gold-leaf);
        color: var(--oxford-blue);
        border: none;
        border-radius: 6px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 2px 8px rgba(0, 33, 71, 0.1);
    }

        .save-button:hover {
            background: #e6c52e;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(0, 33, 71, 0.15);
        }

    .cancel-button {
        display: inline-flex;
        align-items: center;
        padding: 0.8rem 1.5rem;
        background: rgba(112, 128, 144, 0.1);
        color: var(--oxford-blue);
        border-radius: 6px;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s ease;
    }

        .cancel-button:hover {
            background: rgba(112, 128, 144, 0.2);
            transform: translateY(-2px);
        }

    .button-icon {
        margin-right: 0.5rem;
    }

    .edit-footer {
        height: 2rem;
        overflow: hidden;
    }

    .footer-wave {
        width: 100%;
        height: 100%;
    }

    /* Animations */
    @@keyframes float {
        0%, 100%

    {
        transform: translateY(0);
    }

    50% {
        transform: translateY(-5px);
    }

    }

    /* Responsive design */
    @@media (max-width: 768px) {
        .edit-container

    {
        margin: 1rem;
        border-radius: 8px;
    }

    .edit-header {
        padding: 1.5rem;
    }

    .edit-title {
        font-size: 1.6rem;
    }

    .edit-form {
        padding: 1.5rem;
    }

    .form-actions {
        flex-direction: column;
    }

    }

    @@media (max-width: 480px) {
        .edit-title

    {
        font-size: 1.4rem;
    }

    .button-text {
        font-size: 0.9rem;
    }

    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Animate form elements on load
        const form = document.querySelector('.edit-form');
        const input = document.querySelector('.form-input');

        // Set initial state
        form.style.opacity = '0';
        form.style.transform = 'translateY(20px)';

        // Animate in
        setTimeout(() => {
            form.style.transition = 'all 0.6s ease-out';
            form.style.opacity = '1';
            form.style.transform = 'translateY(0)';
        }, 100);

        // Focus animation
        input.addEventListener('focus', function() {
            this.parentNode.querySelector('.input-label').style.color = 'var(--gold-leaf)';
        });

        input.addEventListener('blur', function() {
            this.parentNode.querySelector('.input-label').style.color = 'var(--oxford-blue)';
        });
    });
</script>
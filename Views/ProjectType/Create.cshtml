@model ProjectType

<div class="creation-container">
    <!-- Header with scholarly decoration -->
    <div class="creation-header">
        <div class="header-ornament">
            <svg viewBox="0 0 100 100" class="corner-swoosh">
                <path d="M0,0 C50,50 70,30 100,100" fill="none" stroke="var(--gold-leaf)" stroke-width="2" stroke-dasharray="5,2" />
            </svg>
        </div>
        <h2 class="creation-title">
            <span class="title-icon">✨</span>
            Create New Project Type
        </h2>
        <p class="creation-subtitle">Define a new academic classification</p>
    </div>

    <!-- Main form with elegant styling -->
    <form asp-action="Create" class="creation-form">
        <div class="form-group">
            <div class="input-container">
                <label asp-for="TypeName" class="input-label"></label>
                <input asp-for="TypeName" class="form-input"
                       placeholder="e.g. Graduate Thesis, Faculty Research" />
                <div class="input-underline"></div>
                <span asp-validation-for="TypeName" class="validation-message"></span>
                <div class="input-hint">Use a clear, descriptive name for this project category</div>
            </div>
        </div>

        <div class="form-actions">
            <button type="submit" class="create-button">
                <span class="button-icon">➕</span>
                <span class="button-text">Create Project Type</span>
            </button>
            <a asp-action="Index" class="cancel-button">
                <span class="button-icon">↩</span>
                <span class="button-text">Cancel</span>
            </a>
        </div>
    </form>

    <!-- Decorative footer with academic motif -->
    <div class="creation-footer">
        <svg viewBox="0 0 1200 60" class="footer-swoop">
            <path d="M0,30 C400,0 800,60 1200,30 L1200,60 L0,60 Z" fill="rgba(0,33,71,0.03)" />
        </svg>
    </div>
</div>

<style>
    /* Academic color palette */
    :root {
        --oxford-blue: #002147;
        --gold-leaf: #D4AF37;
        --ivory: #FFFFF0;
        --slate: #708090;
        --burgundy: #800020;
        --sage: #9DC183;
        --parchment: #F5E6CA;
    }

    body {
        font-family: 'Crimson Text', Georgia, serif;
        background-color: var(--parchment);
        color: var(--oxford-blue);
        margin: 0;
        padding: 0;
        line-height: 1.6;
    }

    .creation-container {
        max-width: 700px;
        margin: 2rem auto;
        background: white;
        border-radius: 12px;
        box-shadow: 0 10px 30px rgba(0, 33, 71, 0.1);
        overflow: hidden;
    }

    .creation-header {
        padding: 2.5rem 2rem;
        background: linear-gradient(135deg, var(--oxford-blue), #003366);
        color: white;
        position: relative;
    }

    .header-ornament {
        position: absolute;
        top: 0;
        right: 0;
        width: 120px;
        height: 120px;
        opacity: 0.7;
    }

    .corner-swoosh {
        width: 100%;
        height: 100%;
    }

    .creation-title {
        margin: 0;
        font-size: 2.2rem;
        font-weight: 700;
        display: flex;
        align-items: center;
    }

    .title-icon {
        margin-right: 1rem;
        font-size: 2rem;
        animation: pulse 2s infinite;
    }

    .creation-subtitle {
        margin: 0.5rem 0 0;
        font-style: italic;
        opacity: 0.9;
        font-size: 1.1rem;
    }

    .creation-form {
        padding: 2.5rem 2rem;
    }

    .input-container {
        margin-bottom: 2.5rem;
        position: relative;
    }

    .input-label {
        display: block;
        margin-bottom: 0.8rem;
        font-weight: 600;
        color: var(--oxford-blue);
        font-size: 1rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .form-input {
        width: 100%;
        padding: 1.2rem;
        font-size: 1.2rem;
        border: none;
        border-bottom: 2px solid rgba(112, 128, 144, 0.3);
        background: rgba(255,255,255,0.9);
        transition: all 0.3s ease;
    }

        .form-input:focus {
            outline: none;
            border-bottom-color: var(--gold-leaf);
            background: rgba(255, 215, 0, 0.05);
            box-shadow: 0 2px 10px rgba(212, 175, 55, 0.1);
        }

    .input-underline {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 0;
        height: 3px;
        background: var(--gold-leaf);
        transition: width 0.4s ease;
    }

    .form-input:focus ~ .input-underline {
        width: 100%;
    }

    .validation-message {
        display: block;
        margin-top: 0.8rem;
        color: var(--burgundy);
        font-size: 0.95rem;
        font-weight: 500;
    }

    .input-hint {
        margin-top: 0.8rem;
        font-size: 0.9rem;
        color: var(--slate);
        font-style: italic;
    }

    .form-actions {
        display: flex;
        gap: 1.5rem;
        margin-top: 3rem;
    }

    .create-button {
        display: inline-flex;
        align-items: center;
        padding: 1rem 2rem;
        background: var(--gold-leaf);
        color: var(--oxford-blue);
        border: none;
        border-radius: 8px;
        font-weight: 600;
        font-size: 1.1rem;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 4px 12px rgba(0, 33, 71, 0.15);
    }

        .create-button:hover {
            background: #e6c52e;
            transform: translateY(-3px);
            box-shadow: 0 6px 16px rgba(0, 33, 71, 0.2);
        }

    .cancel-button {
        display: inline-flex;
        align-items: center;
        padding: 1rem 2rem;
        background: rgba(112, 128, 144, 0.1);
        color: var(--oxford-blue);
        border-radius: 8px;
        text-decoration: none;
        font-weight: 600;
        font-size: 1.1rem;
        transition: all 0.3s ease;
    }

        .cancel-button:hover {
            background: rgba(112, 128, 144, 0.2);
            transform: translateY(-3px);
        }

    .button-icon {
        margin-right: 0.8rem;
    }

    .creation-footer {
        height: 3rem;
        overflow: hidden;
    }

    .footer-swoop {
        width: 100%;
        height: 100%;
    }

    /* Animations */
    @@keyframes pulse {
        0%, 100%

    {
        transform: scale(1);
        opacity: 1;
    }

    50% {
        transform: scale(1.1);
        opacity: 0.8;
    }

    }

    @@keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    /* Responsive design */
    @@media (max-width: 768px) {
        .creation-container

    {
        margin: 1rem;
        border-radius: 8px;
    }

    .creation-header {
        padding: 2rem 1.5rem;
    }

    .creation-title {
        font-size: 1.8rem;
    }

    .creation-form {
        padding: 2rem 1.5rem;
    }

    .form-actions {
        flex-direction: column;
        gap: 1rem;
    }

    .create-button,
    .cancel-button {
        width: 100%;
        justify-content: center;
    }

    }

    @@media (max-width: 480px) {
        .creation-title

    {
        font-size: 1.5rem;
    }

    .title-icon {
        font-size: 1.5rem;
    }

    .creation-subtitle {
        font-size: 1rem;
    }

    .form-input {
        font-size: 1rem;
        padding: 1rem;
    }

    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Animate form appearance
        const form = document.querySelector('.creation-form');
        form.style.opacity = '0';
        form.style.transform = 'translateY(20px)';

        setTimeout(() => {
            form.style.transition = 'all 0.6s ease-out';
            form.style.opacity = '1';
            form.style.transform = 'translateY(0)';
        }, 100);

        // Enhance input focus experience
        const input = document.querySelector('.form-input');

        input.addEventListener('focus', function() {
            this.parentNode.querySelector('.input-label').style.color = 'var(--gold-leaf)';
            this.parentNode.querySelector('.input-label').style.fontWeight = '700';
        });

        input.addEventListener('blur', function() {
            this.parentNode.querySelector('.input-label').style.color = 'var(--oxford-blue)';
            this.parentNode.querySelector('.input-label').style.fontWeight = '600';
        });
    });
</script>
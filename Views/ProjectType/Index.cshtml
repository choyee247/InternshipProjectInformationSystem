@model List<ProjectType>

<div class="university-dashboard">
    <!-- Header with animated title -->
    <div class="dashboard-header">
        <div class="header-content">
            <h2 class="dashboard-title">
                <span class="title-words">
                    <span>P</span><span>r</span><span>o</span><span>j</span><span>e</span><span>c</span><span>t</span>
                    <span>T</span><span>y</span><span>p</span><span>e</span><span>s</span>
                </span>
                <span class="title-icon">📚</span>
            </h2>
            <p class="dashboard-subtitle">Academic Research Categories</p>
        </div>
        <a asp-action="Create" class="add-button">
            <span class="button-icon">+</span>
            <span class="button-text">Add New Type</span>
        </a>
    </div>

    @* <!-- Interactive filter/search section -->
    <div class="dashboard-controls">
        <div class="search-box">
            <input type="text" placeholder="Search project types..." class="search-input">
            <button class="search-button">🔍</button>
        </div>
        <div class="sort-options">
            <select class="sort-select">
                <option>Sort by Name (A-Z)</option>
                <option>Sort by Name (Z-A)</option>
                <option>Sort by Recent</option>
            </select>
        </div>
    </div> *@

    <!-- Main content area with animated cards -->
    <div class="project-types-container">
        @foreach (var item in Model)
        {
            <div class="project-type-card" data-id="@item.ProjectType_pkId">
                <div class="card-header">
                    <h3 class="type-name">@item.TypeName</h3>
                    <div class="card-actions">
                        <a asp-action="Edit" asp-route-id="@item.ProjectType_pkId" class="action-button edit">
                            <span class="action-icon">✏️</span>
                            <span class="action-tooltip">Edit</span>
                        </a>
                        <a asp-action="Details" asp-route-id="@item.ProjectType_pkId" class="action-button details">
                            <span class="action-icon">🔍</span>
                            <span class="action-tooltip">Details</span>
                        </a>
                    </div>
                </div>
                
                <div class="card-decoration"></div>
            </div>
        }
    </div>

    <!-- Floating action button for mobile -->
    <div class="floating-action">
        <a asp-action="Create" class="fab-button">+</a>
    </div>
</div>

<style>
    /* Base styles with academic color palette */
    :root {
        --oxford-blue: #002147;
        --university-gold: #FFD700;
        --ivory: #FFFFF0;
        --slate-gray: #708090;
        --burgundy: #800020;
        --sage-green: #9DC183;
        --parchment: #F5E6CA;
    }

    body {
        font-family: 'Segoe UI', 'Roboto', sans-serif;
        background-color: var(--parchment);
        color: var(--oxford-blue);
        margin: 0;
        padding: 20px;
    }

    .university-dashboard {
        max-width: 1200px;
        margin: 0 auto;
        background-color: white;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0, 33, 71, 0.1);
        overflow: hidden;
        padding: 20px;
    }

    .dashboard-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 20px;
        background: linear-gradient(135deg, var(--oxford-blue), #003366);
        border-radius: 10px;
        color: white;
        margin-bottom: 30px;
        position: relative;
        overflow: hidden;
    }

    .dashboard-header::after {
        content: "";
        position: absolute;
        top: 0;
        right: 0;
        width: 100px;
        height: 100px;
        background: radial-gradient(circle, rgba(255,215,0,0.2) 0%, transparent 70%);
    }

    .dashboard-title {
        font-size: 2.5rem;
        margin: 0;
        display: flex;
        align-items: center;
        font-weight: 700;
    }

    .title-words span {
        display: inline-block;
        transition: transform 0.3s ease;
    }

    .title-words:hover span {
        transform: translateY(-5px);
    }

    .title-words span:nth-child(odd) {
        color: var(--university-gold);
    }

    .title-icon {
        margin-left: 15px;
        font-size: 2rem;
        animation: float 3s ease-in-out infinite;
    }

    .dashboard-subtitle {
        margin: 5px 0 0;
        font-style: italic;
        opacity: 0.9;
        font-size: 1rem;
    }

    .add-button {
        display: flex;
        align-items: center;
        padding: 12px 20px;
        background-color: var(--university-gold);
        color: var(--oxford-blue);
        border: none;
        border-radius: 50px;
        font-weight: bold;
        text-decoration: none;
        transition: all 0.3s ease;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .add-button:hover {
        transform: translateY(-3px);
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
        background-color: #ffea80;
    }

    .button-icon {
        margin-right: 8px;
        font-size: 1.2rem;
    }

    .dashboard-controls {
        display: flex;
        justify-content: space-between;
        margin-bottom: 25px;
        flex-wrap: wrap;
        gap: 15px;
    }

    .search-box {
        display: flex;
        flex: 1;
        min-width: 250px;
    }

    .search-input {
        flex: 1;
        padding: 12px 20px;
        border: 2px solid var(--slate-gray);
        border-radius: 50px 0 0 50px;
        font-size: 1rem;
        outline: none;
        transition: border-color 0.3s;
    }

    .search-input:focus {
        border-color: var(--oxford-blue);
    }

    .search-button {
        padding: 0 20px;
        background-color: var(--oxford-blue);
        color: white;
        border: none;
        border-radius: 0 50px 50px 0;
        cursor: pointer;
        transition: background-color 0.3s;
    }

    .search-button:hover {
        background-color: #003366;
    }

    .sort-select {
        padding: 12px 20px;
        border: 2px solid var(--slate-gray);
        border-radius: 50px;
        font-size: 1rem;
        background-color: white;
        cursor: pointer;
        min-width: 200px;
    }

    .project-types-container {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 20px;
        padding: 10px;
    }

    .project-type-card {
        background: white;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0, 33, 71, 0.1);
        padding: 20px;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
        border: 1px solid rgba(112, 128, 144, 0.2);
    }

    .project-type-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 25px rgba(0, 33, 71, 0.15);
    }

    .project-type-card::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 5px;
        height: 100%;
        background: linear-gradient(to bottom, var(--university-gold), var(--burgundy));
    }

    .card-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 15px;
    }

    .type-name {
        margin: 0;
        font-size: 1.3rem;
        color: var(--oxford-blue);
        flex: 1;
    }

    .card-actions {
        display: flex;
        gap: 10px;
    }

    .action-button {
        width: 36px;
        height: 36px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        text-decoration: none;
        transition: all 0.3s ease;
        position: relative;
    }

    .action-button.edit {
        background-color: rgba(0, 33, 71, 0.1);
        color: var(--oxford-blue);
    }

    .action-button.details {
        background-color: rgba(255, 215, 0, 0.2);
        color: var(--burgundy);
    }

    .action-button:hover {
        transform: scale(1.1);
    }

    .action-tooltip {
        position: absolute;
        top: -30px;
        left: 50%;
        transform: translateX(-50%);
        background-color: var(--oxford-blue);
        color: white;
        padding: 4px 8px;
        border-radius: 4px;
        font-size: 0.8rem;
        opacity: 0;
        transition: opacity 0.3s;
        white-space: nowrap;
    }

    .action-button:hover .action-tooltip {
        opacity: 1;
    }

    .card-footer {
        display: flex;
        justify-content: space-between;
        font-size: 0.9rem;
        color: var(--slate-gray);
        padding-top: 10px;
        border-top: 1px dashed rgba(112, 128, 144, 0.3);
    }

    .card-decoration {
        position: absolute;
        bottom: 10px;
        right: 10px;
        width: 60px;
        height: 60px;
        background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><path fill="%23708090" opacity="0.1" d="M20,20 L80,20 L80,80 L20,80 Z"/></svg>');
        opacity: 0.3;
    }

    .floating-action {
        position: fixed;
        bottom: 30px;
        right: 30px;
        display: none;
    }

    .fab-button {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        background-color: var(--burgundy);
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.8rem;
        text-decoration: none;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        transition: all 0.3s ease;
    }

    .fab-button:hover {
        transform: scale(1.1) rotate(90deg);
        background-color: var(--university-gold);
        color: var(--oxford-blue);
    }

    /* Animations */
    @@keyframes float {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(-10px); }
    }

    /* Responsive design */
    @@media (max-width: 768px) {
        .dashboard-header {
            flex-direction: column;
            text-align: center;
            gap: 15px;
        }

        .dashboard-title {
            font-size: 2rem;
        }

        .floating-action {
            display: block;
        }

        .add-button .button-text {
            display: none;
        }

        .add-button .button-icon {
            margin-right: 0;
            font-size: 1.5rem;
        }
    }
</style>

<script>
    // Add interactive animations
    document.addEventListener('DOMContentLoaded', function() {
        // Animate cards on load
        const cards = document.querySelectorAll('.project-type-card');
        cards.forEach((card, index) => {
            card.style.opacity = '0';
            card.style.transform = 'translateY(20px)';
            card.style.transition = `all 0.5s ease ${index * 0.1}s`;

            setTimeout(() => {
                card.style.opacity = '1';
                card.style.transform = 'translateY(0)';
            }, 100);
        });

        // Add hover effect to title letters
        const titleLetters = document.querySelectorAll('.title-words span');
        titleLetters.forEach((letter, index) => {
            letter.addEventListener('mouseover', () => {
                letter.style.transform = 'translateY(-8px) rotate(5deg)';
            });
            letter.addEventListener('mouseout', () => {
                letter.style.transform = 'translateY(0) rotate(0)';
            });
        });

        // Simulate search functionality
        const searchInput = document.querySelector('.search-input');
        searchInput.addEventListener('input', function() {
            const searchTerm = this.value.toLowerCase();
            cards.forEach(card => {
                const typeName = card.querySelector('.type-name').textContent.toLowerCase();
                if (typeName.includes(searchTerm)) {
                    card.style.display = 'block';
                } else {
                    card.style.display = 'none';
                }
            });
        });
    });
</script>